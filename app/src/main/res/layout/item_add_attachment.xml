<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_2"
    android:orientation="vertical"
    android:padding="@dimen/margin_5">

    <ImageView
        android:id="@+id/imgData"
        android:layout_width="@dimen/height_90"
        android:layout_height="@dimen/height_90"
        android:layout_marginEnd="@dimen/margin_10"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/margin_10"
        android:padding="@dimen/padding_10" />

    <TextView
        android:id="@+id/txtFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_toStartOf="@+id/imgClose"
        android:layout_toLeftOf="@+id/imgClose"
        android:layout_toEndOf="@id/imgData"
        android:layout_toRightOf="@id/imgData"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/txtFilePath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="@dimen/height_30"
        android:layout_height="@dimen/height_30"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:padding="@dimen/padding_10"
        android:src="@drawable/close" />

    <View
        android:id="@+id/viewReminder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtFileName"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/off_white"
        android:visibility="gone" />
</RelativeLayout>
